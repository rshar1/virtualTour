<html>
<head>
<script src = "http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script>
	var imgL;
	var imgR;
	var canvas;
	var ctx;
	var x;
	var maxA;
	var scale;

	

	$(document).ready(function(){
		imgL = new Image();
		imgR = new Image();
		maxA = 8;
		a = 0;
		
		
		imgL.src = "hats_0_0.jpg";
		imgR.src = "hats_0_1.jpg";
		canvas = document.getElementById("myCanvas");
		ctx = canvas.getContext("2d");
		x = canvas.width/2;
		
	//Draw the images
		ctx.drawImage(imgR,x,0)
		ctx.drawImage(imgL,x-imgR.width,0);
		
	})


	$(document).keydown(function(event){
		scale = canvas.height / imgR.height;
		//Left Arrow
		if(event.which == 37){
			x += 20;
			
			if(x > (imgL.width * scale) * 0.8){
				x -= imgL.width *scale;
				var tmp = imgL;
				imgL = imgR;
				imgR = tmp;
				
			}
		}

		//Right arrow
		if(event.which == 39){
			x -= 20;
			if(x < -(imgR.width *scale * 0.2  )){
				x += imgR.width*scale;
				var tmp = imgL;
				imgL = imgR;
				imgR = tmp;
				
			}
		}
		
		ctx.drawImage(imgR,x,0,imgR.width *scale,imgR.height*scale)
		ctx.drawImage(imgL,x-(imgL.width *scale),0,imgL.width *scale,imgL.height*scale);
	})
</script>

</head>

<body>
<canvas id = "myCanvas"  width = "2000" height = "1200" style = "border: 1px solid black"> </canvas>

</body>


</html>
