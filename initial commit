<html>
<head>
<script src = "http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script>
	var imgL;
	var imgR;
	var canvas;
	var ctx;
	var x;
	var scale;
	var p;

	

	$(document).ready(function(){
		imgL = new Image();
		imgR = new Image();
		canvas = document.getElementById("myCanvas");
		ctx = canvas.getContext("2d");
		x = 0;
		p = 0;
		
		imgR.onload = function(){
			scale = canvas.height / imgR.height;
			ctx.drawImage(imgR,x,0,imgR.width * scale,imgR.height*scale)
			
		}
		imgL.onload = function(){
			ctx.drawImage(imgL,x-(imgL.width *scale),0,imgL.width *scale,imgL.height*scale);
		}
		imgR.src = "hats_" + p + ".jpg";
		imgL.src = "hats_" + p + ".jpg";

	})

	$(document).keydown(function(event){
		
		//Left Arrow
		if(event.which == 37){
			x += 20;
			
			if(x > (imgL.width * scale) * 0.8){
				x -= imgL.width *scale;
				var tmp = imgL;
				imgL = imgR;
				imgR = tmp;
				
			}
		}

		//Right arrow
		if(event.which == 39){
			x -= 20;
			if(x < -(imgR.width *scale * 0.2  )){
				x += imgR.width*scale;
				var tmp = imgL;
				imgL = imgR;
				imgR = tmp;
				
			}
		}

		//Up arrow
		if(event.which == 38){
			p++;
			imgR.src = "hats_" + p + ".jpg";
			imgL.src = "hats_" + p + ".jpg";
		}
		//Down arrow
		if(event.which == 40){
			p--;
			imgR.src = "hats_" + p + ".jpg";
			imgL.src = "hats_" + p + ".jpg";
		}
		
		ctx.drawImage(imgR,x,0,imgR.width *scale,imgR.height * scale);
		ctx.drawImage(imgL,x-(imgL.width *scale),0,imgL.width * scale,imgL.height*scale);
	})
</script>

</head>

<body>
<canvas id = "myCanvas"  width = "2000" height = "1200" style = "border: 1px solid black"> </canvas>

</body>


</html>
